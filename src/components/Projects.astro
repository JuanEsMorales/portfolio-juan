---
import HTMl from "./icons/HTML.astro"
import CSS from "./icons/CSS.astro"
import JS from "./icons/JS.astro"
import TAILWIND from "./icons/Tailwind.astro"
const TAGS = {
  HTML: {
    name: "HTML5",
    class: "bg-orange-900 text-white",
    icon: HTMl,
  },
  CSS: {
    name: "CSS3",
    class: "bg-blue-900 text-blue-200",
    icon: CSS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#154e68] text-blue-200",
    icon: TAILWIND,
  },
  JS: {
    name: "Javascript",
    class: "bg-yellow-900 text-yellow-200",
    icon: JS,
  },
}
const PROJECTS = [
  {
    title: "DEC",
    description:
      "Una aplicación web que está destinada a medir el funcionamiento psico-cognitivo de un conductor para determinar si es optimo para continuar su viaje.",
    link: "#",
    github: "https://github.com/JuanEsMorales/DEC_PROJECT",
    image: "/projects/dec.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JS],
  },
  {
    title: "A&J",
    description:
      "Una tienda virtual de pulseras, manillas, collares, aretes, anillos, bisutería en general.",
    link: "#",
    github: "#",
    image: "/projects/commerce.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JS, TAGS.TAILWIND],
  },
]
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class='text-3xl font-semibold mb-2 text-yellow-200'>{title}</h3>
      <p class='text-lg mb-5 text-pretty'>{description}</p>
      <ul class="flex gap-x-2 flex-row items-center">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 items-center rounded-full text-ms ${tag.class} py-1 px-3 mb-4`} >
                <tag.icon class="size-6" />
                {tag.name}
            </span>
            </li>
        ))}
      </ul>
      <img
        class='max-h-[400px] rounded shadow-2xl shadow-white/15 mb-3'
        src={image}
        alt={`Captura de pantalla del proyecto ${title}`}
      />
    </article>
  ))
}
